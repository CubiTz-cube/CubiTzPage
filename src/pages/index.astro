---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/NavBar.astro';
import Stars from '../components/Stars.astro';
import Valores from '../components/Valores.astro';
---

<Layout title="CubiTz">
	<Stars amount={10}/>
	<header>
		<Navbar links={["Inicio", "¿Quienes_Somos?", "Proyectos", "Equipo"]} logo='isotipo.svg'/>
	</header>
	<main>
		<section id="inicio">
			a
		</section>	
		
		<section id="¿quienes_somos?">
			<Valores tam={200} valores={["Valor1","Valor2","Valor3"]}/>
		</section>
		
		<section id="proyectos"></section>
		
		<section id="tecnologia"></section>
		
		<section id="equipo"></section>
	</main>
</Layout>
<style>
	body{
		margin: 0;
		padding: 0;
		height: 1000px;
	}
	header {
		position: sticky;
		top: 0;
		z-index: 2;
		display: flex;
		justify-content: center;
		display: sticky;
		padding-block: 10px;
	}
	main {
  		margin-inline: 10%;
		display: flex;
		flex-direction: column;
		height: 100%;
	}
	#inicio {
		outline: 2px solid #FFFB;
		border-radius: 20px;
		height: 700px;
	}
</style>