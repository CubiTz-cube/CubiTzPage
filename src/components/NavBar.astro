---
import Icon from "./svg/isotipo.astro";
interface Props {
    names: string[];
	links: string[];
}

const { names,links } = Astro.props;
---
<nav>
    <a class="icon" href=`#${links[0]}`><Icon /></a>
    {links.slice(1).map((link,index) => (
        <a href={`#${link}`}>{names[index]}</a>
    ))}
</nav>

<style>
    .icon {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }
    nav {
        animation: nav-shadowm 1s linear both;
        animation-timeline: scroll();
        animation-range: 0 100px;
        background-color: #0b0511b7;
        border-radius: 24px;
        backdrop-filter: blur(5px);
        height: 2.5rem;
        
        display: flex;
        align-items: center;
        padding-block: 0.4rem;
        padding-inline: 1.5rem;
        gap: 1rem;

        font-family: "aldrich", sans-serif;
    }
    @keyframes nav-shadowm {
        100% {
            box-shadow: 0 0 30px 2px hsla(270, 2%, 22%, 0.818)
        }
    }
    a {
        flex: 1;
        font-size: clamp(1em, 1.5vw, 1.5em);
        text-decoration: none;
        color: var(--textColor-dark);
        transition: color 0.2s cubic-bezier(.4,0,.2,1);
    }
    @media screen and (max-width: 800px){
        nav{
            height: 1.5rem;
        }
    }
    @media screen and (max-width: 400px){
        a {
            font-size: small;
        }
    }
    a:hover {
        color: var(--cubitz2-dark);
    }
</style>
