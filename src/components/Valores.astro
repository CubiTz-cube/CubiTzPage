---
interface Props {
	values: string[]
    tam: number
}

const { values,tam } = Astro.props
var size =values.length
var disminution=tam/size
var opacity = 1 / size+0.2
---

<div>
    {values.map((value,index)=>{
        return <div class="value" style={`font-size: ${disminution*(values.length-index)}rem; opacity: ${opacity*(values.length-index)};`}>{value}</div>
    })}
</div>

<style>
    div {
        font-size: 0.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        font-family: "aldrich", sans-serif;
    }
    .value{
        text-align: center;
    }
</style>