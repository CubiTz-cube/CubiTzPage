---
interface Props {
    name: string
}

const { name  } = Astro.props;
---

<div>
    <h2>{name}</h2>
</div>

<style>
    div{
        background-color: aqua;
        height: 100%;
        border-radius: 12px;
    }
    h2 {
        font-size: 1rem;
        text-align: center;
        font-family: "aldrich", sans-serif;
    }
</style>