---
interface Props {
    name: string
    title: string
    img: string
}

const { name, title, img  } = Astro.props;
---

<div class="cardContainer">
    <div class="nameContainer">
        <h2 class="name">{name}</h2>
        <h2 class="title">{title}</h2>
    </div>
    <div class="imgContainer"><img src={img} alt="team"/></div>

</div>

<style>
    .cardContainer{
        height: 100%;
        border-radius: 12px;
        display: flex;
        flex-direction: column;
    }
    .nameContainer{
        flex: 1;
        display: flex;
        flex-direction: row;
        gap: 1rem;
        justify-content: center;
        align-items: baseline;
        font-family: "lekton", sans-serif;
        text-align: center;
    }
    .name {
        font-weight: bold;
        font-size: xx-large;
        margin: 0;
    }
    .title{
        font-size: x-large;
        margin: 0;
    }
    .imgContainer{
        flex: 8;
        display: flex;
        justify-content: center;
        border-radius: 12px;
        overflow: hidden;
        object-fit: contain;
    }
    img{
        height: auto;
        width: 100%;
        object-fit: contain;
    }
</style>