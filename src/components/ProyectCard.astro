---
import GithubButton from "./GithubButton.astro"

interface Props {
    name: string,
    description: string,
    img: string,
    tech: string[][],
    link: string
}

const { name, description, img, tech , link} = Astro.props
---

<div class="cardContainer">
    <div class="card">
        <h2 class="name">{name}</h2>
        <div class="imgContainer"><img src={img} alt={name}/></div>
        <p class="description">{description}</p>
        <div class="link">
            <GithubButton link={link}/>
        </div>
        <div class="tech">
            {tech.map((t) => (
                <div class="imgContainerTech">
                    <img src=`https://img.shields.io/badge/${t[0]}-${t[1].replace("#","")}?style=for-the-badge&logo=${t[0]}&logoColor=white` alt="tech"/>
                </div>
            ))}
        </div>
        <nav class="link"></nav>
    </div>
</div>

<style>
    .cardContainer{
        margin-left: 2vw;
        margin-right: 3vw;
        border: 1px solid rgb(255, 255, 255);
        border-radius: 24px;
        background-color: rgba(0, 0, 0, 0.432);
    }

    .card{
        display: grid;
        grid-template-rows: 0.5fr 3fr 0.5fr 0.2fr;
        grid-template-columns: repeat(2, 1fr);
        grid-template-areas: 
         "name img"
         "description img"
         "link img"
         "tech tech";
        margin-block: 1rem;
        margin-inline: 1.5vw;
    }
    .name {
        flex: 1;
        grid-area: name;
        font-size: clamp(1em, 2.5vw, 2.5em);
        font-family: "aldrich", sans-serif;
        margin-bottom: 0;
    }
    .imgContainer {
        flex: 1;
        grid-area: img;
        display: flex;
        justify-content: center;
        height: max-content;
        justify-self: center;
        align-self: center;
    }
    img{
        flex: 1;
        height: max-content;
        width: 100%;
        object-fit: contain;
    }
    .description {
        flex: 1;
        opacity: 0.9;
        grid-area: description;
        font-size: clamp(1em, 2vw, 2em);
    }
    @media screen and (max-width: 800px){
        .card{
            grid-template-rows: 0.5fr 2fr 1fr 0.5fr 0.2fr;
            grid-template-columns: 1fr;
            grid-template-areas: 
            "name"
            "img"
            "description"
            "link"
            "tech";
        }
        .name{
            text-align: center;
            font-size: 2rem;
        }
        .description {
            font-size: 1rem;
        }
    
    }
    .tech {
        grid-area: tech;
        font-size: 1rem;
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }
    .imgContainerTech{
        display: flex;
        justify-content: center;
        align-items: center;
        height: max-content;
        width: max-content;
        border-radius: 12px;
        overflow: hidden;
    }
    .link {
        grid-area: link;
        font-size: 1rem;
    }
</style>