---
interface Props {
	values: string[]
}
const { values } = Astro.props;
---

<div>
    <div class="value">{values[0]}</div>
    <div class="value">{values[1]}</div>
    <div class="value">{values[2]}</div>
</div>

<style>
    div {
        font-size: 0.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        font-family: "aldrich", sans-serif;
    }
    div :nth-child(1){
        font-size: clamp(3.5em, 5vw, 7em);
        opacity: 1;
    }
    div :nth-child(2){
        font-size: clamp(2.5em, 4vw, 6em);
        opacity: 0.8;
    }
    div :nth-child(3){
        font-size: clamp(1.5em, 3vw, 5em);
        opacity: 0.6;
    }
    .value{
        text-align: center;
    }
</style>